<main>
  <div id="cart_id" style="display: none;">{{this.user.cart}}</div>
  <div class="product__detail__container">
    <div class="product__detail__info">
      <h3>{{this.product.title}}</h3> 
      <p>{{this.product.description}}</p>
      <h3>${{this.product.price}}</h3>
      <h3>Stock: {{this.product.stock}}</h3>
      <h3>Size: {{this.product.size}} ml</h3>
      <div>
      <button
        class="product__detail__button"
        id="addProduct__btn"
        value={{this.product._id}}>
        Add to Cart
      </button>

      <button
        class="product__detail__button"
        id="deleteProduct__btn"
        value={{this.product._id}}>
        Delete Product
      </button>
      </div>
    </div>
    <div class="product__detail__image">
      <img src={{this.product.thumbnail}} alt="product__image" />
    </div>

  </div>
</main>
<script src="/js/products.js"></script>